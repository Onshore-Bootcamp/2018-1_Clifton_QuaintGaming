@using QuaintGaming.Models
@model UserPO
@{
    ViewBag.Title = "User Details";
}

<div>

    @Html.HiddenFor(model => Model.UserID)

    <div class="user-card">
        <div class="form-horizontal">
            <div class="username-card">
                <h2> @Html.DisplayFor(model => Model.Username)</h2>
            </div>

            @Html.LabelFor(model => Model.FirstName)
            <div class="form-group">
                @Html.DisplayFor(model => Model.FirstName)
            </div>
            @Html.LabelFor(model => Model.LastName)
            <div class="form-group">
                @Html.DisplayFor(model => Model.LastName)
            </div>
            @Html.LabelFor(model => Model.Email)
            <div class="form-group">
                @Html.DisplayFor(model => Model.Email)
            </div>
            @Html.LabelFor(model => Model.Title)
            <div class="form-group">
                @Html.DisplayFor(model => Model.Title)
            </div>
            <div class="user-detail-buttons">
                    @Html.ActionLink("Edit Details", "UpdateUser", "Users", new { specificUser = Model.UserID }, new { @class = "btn btn-default" })
           
                    @Html.ActionLink("Close Account", "RemoveUser", "Users", new { specificUser = Model.UserID }, new { @class = "btn btn-danger", @onclick = "return userDelete()" })
          
            </div>
        </div>
    </div>

</div>