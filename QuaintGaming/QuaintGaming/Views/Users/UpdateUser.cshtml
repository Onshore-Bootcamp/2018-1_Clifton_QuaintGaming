@using QuaintGaming.Models
@model UserPO
@{
    ViewBag.Title = "Update User Information";
}

<div>
    <h2>Update Information</h2>
    @using (Html.BeginForm("UpdateUser", "Users", FormMethod.Post))
    {
        @Html.HiddenFor(model => Model.UserID)
        <div class="form-horizontal">
            @Html.LabelFor(model => Model.Username)
            <div class="form-group">
                @Html.ValidationMessageFor(model => Model.Username)
                @Html.EditorFor(model => Model.Username)
            </div>

            @Html.LabelFor(model => Model.FirstName)
            <div class="form-group">
                @Html.EditorFor(model => Model.FirstName)
            </div>

            @Html.LabelFor(model => Model.LastName)
            <div class="form-group">
                @Html.EditorFor(model => Model.LastName)
            </div>

            @Html.LabelFor(model => Model.Email)
            <div class="form-group">
                @Html.ValidationMessageFor(model => Model.Email)
                @Html.EditorFor(model => Model.Email)
            </div>

            @Html.HiddenFor(model => Model.Password)

            @if ((int)Session["UserRole"] == 1)
            {
                <div>
                    @Html.RadioButtonFor(model => Model.RoleID, "1")
                    @Html.Label("Administrator")
                </div>
                <div>
                    @Html.RadioButtonFor(model => Model.RoleID, "2")
                    @Html.Label("Contributor")
                </div>
                <div>
                    @Html.RadioButtonFor(model => Model.RoleID, "3")
                    @Html.Label("User")
                </div>
            }
            else
            {
                <p><strong>Status:  </strong>@Html.DisplayFor(model => Model.Title)</p>
            }

        </div>
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="spacing-underbutton">
                    <input class="btn btn-default" type="submit" value="Save Changes" />
                </div>
            </div>
            @if (Session["UserRole"] != null && (int)Session["UserID"] == Model.UserID)
            {
                <div class="col-md-2">
                    <div class="spacing-underbutton">
                        @Html.ActionLink("Cancel", "UserDetails", "Users", new { specificUser = Session["UserID"] }, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
            else if (Session["UserRole"] != null && ((int)Session["UserRole"] == 1 && (int)Session["UserID"] != Model.UserID))
            {
                <div class="col-md-2">
                    <div class="spacing-underbutton">
                        @Html.ActionLink("Cancel", "Index", "Users", new { @class = "btn btn-default" })
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-2">
                    <div class="spacing-underbutton">
                        @Html.ActionLink("Cancel", "Index", "Games", new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>

    }
</div>