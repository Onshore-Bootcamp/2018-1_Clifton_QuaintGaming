@using QuaintGaming.Models
@using PagedList.Mvc
@using PagedList
@model PagedList<GamePO>

@{
    ViewBag.Title = "Quaint Games";
}
<div class="main-div">
    <div class="col-md-12">
        <div class="text-center add-button">
            @if (Session["UserRole"] != null && (int)Session["UserRole"] < 3)
            {
                @Html.ActionLink("Add Game", "AddGame", "Games", new { @class = "btn btn-primary btn-lg btn-block" })
            }
        </div>

        <div class="row">
            @foreach (GamePO game in Model)
            {
                <div class="col-md-4" id="games-display">
                    <div class="card-wrapper">
                        <div class="card text-center" style="width: 20rem;">
                            <a href="@Url.Action("GameDetails", "Games", new { specificGame = game.GameID })"><img class="card-img-top" src=@game.Picture height="250" width="200" /></a>
                            <div class="card-block">
                                <a href="@Url.Action("GameDetails", "Games", new { specificGame = game.GameID })"><h4 class="card-title">@Html.DisplayFor(model => game.GameName)</h4></a>
                                <p class="card-text">@Html.DisplayFor(model => game.ReleaseYear)</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-sm-10">
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize}))
        </div>
    </div>

</div>